<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gris"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/bloq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/tl_module"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="5dp"
                    android:text="Menú principal"
                    android:textColor="@color/Black"
                    android:textSize="22dip"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bloq_module"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="3dip"
                    android:background="@color/MarronNegro" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dip">

                    <TextView
                        android:id="@+id/tv_subTittle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Acceso rapido"
                        android:textColor="@color/Black"
                        android:textSize="20dip"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view10"
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_marginTop="10dip"
                        android:background="@color/GrisClaro" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/btn_share1"
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:layout_margin="3dip"
                                android:layout_weight="1"
                                android:background="@drawable/button_yellow"
                                android:clickable="true"
                                android:elevation="1dp"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="5dip">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@android:drawable/ic_menu_share" />

                                <TextView
                                    android:id="@+id/textView10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Botón"
                                    android:textColor="@color/White"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btn_ir1"
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:layout_margin="3dip"
                                android:layout_weight="1"
                                android:background="@drawable/button_yellow"
                                android:clickable="true"
                                android:elevation="1dp"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="5dip">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@android:drawable/ic_menu_directions"
                                    android:textColor="@color/Black" />

                                <TextView
                                    android:id="@+id/tvIr2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Botón"
                                    android:textColor="@color/White"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/btn_share"
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:layout_margin="3dip"
                                android:layout_weight="1"
                                android:background="@drawable/button_yellow"
                                android:clickable="true"
                                android:elevation="1dp"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="5dip">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@android:drawable/ic_menu_share" />

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Botón"
                                    android:textColor="@color/White"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btn_ir"
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:layout_margin="3dip"
                                android:layout_weight="1"
                                android:background="@drawable/button_yellow"
                                android:clickable="true"
                                android:elevation="1dp"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="5dip">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@android:drawable/ic_menu_directions"
                                    android:textColor="@color/Black" />

                                <TextView
                                    android:id="@+id/tvIr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Botón"
                                    android:textColor="@color/White"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_marginTop="10dip"
                        android:background="@color/GrisClaro" />


                    <LinearLayout
                        android:id="@+id/layout_button"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dip"
                        android:orientation="horizontal">

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>