<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/Gris"
    android:orientation="vertical"
    android:padding="10dp">

    <com.example.raul.oilnote.Utils.CustomScrollView
        android:id="@+id/Scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/bloq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/tl_module"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="5dp"
                    android:text="MenÃº principal"
                    android:textColor="@color/Black"
                    android:textSize="22dip"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bloq_calendar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="3dip"
                    android:background="@color/MarronNegro" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dip">

                    <TextView
                        android:id="@+id/tv_subTittle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/calendar"
                        android:textColor="@color/Black"
                        android:textSize="20dip"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dip"
                        android:background="@color/GrisClaro" />

                    <CalendarView
                        android:id="@+id/calendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/bloq_fast_access"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="3dip"
                    android:background="@color/MarronNegro" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dip">

                    <TextView
                        android:id="@+id/tv_subTittle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fast_access"
                        android:textColor="@color/Black"
                        android:textSize="20dip"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view10"
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_marginTop="10dip"
                        android:background="@color/GrisClaro" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/btn_add_jornal"
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:layout_margin="3dip"
                                android:layout_weight="1"
                                android:background="@drawable/button_yellow"
                                android:clickable="true"
                                android:elevation="1dp"
                                android:focusable="true"
                                android:gravity="center"
                                android:onClick="buttonJornal"
                                android:orientation="horizontal"
                                android:padding="5dip">

                                <TextView
                                    android:id="@+id/textView10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/add_jornal"
                                    android:textColor="@color/White"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btn_list_workers"
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:layout_margin="3dip"
                                android:layout_weight="1"
                                android:background="@drawable/button_yellow"
                                android:clickable="true"
                                android:elevation="1dp"
                                android:focusable="true"
                                android:gravity="center"
                                android:onClick="buttonWorkers"
                                android:orientation="horizontal"
                                android:padding="5dip">

                                <TextView
                                    android:id="@+id/tvIr2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/worker_list"
                                    android:textColor="@color/White"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/btn_add_weight"
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:layout_margin="3dip"
                                android:layout_weight="1"
                                android:background="@drawable/button_yellow"
                                android:clickable="true"
                                android:elevation="1dp"
                                android:focusable="true"
                                android:gravity="center"
                                android:onClick="buttonWeight"
                                android:orientation="horizontal"
                                android:padding="5dip">

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/add_weigth"
                                    android:textColor="@color/White"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btn_add_expense"
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:layout_margin="3dip"
                                android:layout_weight="1"
                                android:background="@drawable/button_yellow"
                                android:clickable="true"
                                android:elevation="1dp"
                                android:focusable="true"
                                android:gravity="center"
                                android:onClick="buttonExpenses"
                                android:orientation="horizontal"
                                android:padding="5dip">

                                <TextView
                                    android:id="@+id/tvIr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/add_expense"
                                    android:textColor="@color/White"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_marginTop="10dip"
                        android:background="@color/GrisClaro" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/bloc_half_efficiency"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="3dip"
                    android:background="@color/MarronNegro" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dip">

                    <TextView
                        android:id="@+id/tv_subTitte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/general_info"
                        android:textColor="@color/Black"
                        android:textSize="20dip"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view5"
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_marginTop="10dip"
                        android:background="@color/GrisClaro" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_plots"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:text="@string/plots"
                                android:textColor="@color/Black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_tree"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:paddingLeft="10dp"
                                android:text="@string/tree"
                                android:textColor="@color/Black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_workers"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:paddingLeft="10dp"
                                android:text="@string/workers"
                                android:textColor="@color/Black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_kg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:paddingLeft="10dp"
                                android:text="@string/total_kg"
                                android:textColor="@color/Black"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_porciento"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:paddingLeft="10dp"
                                android:text="@string/half_efficiency"
                                android:textAlignment="center"
                                android:textColor="@color/Black"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                tools:layout_editor_absoluteX="0dp"
                                tools:layout_editor_absoluteY="0dp" />

                            <com.hookedonplay.decoviewlib.DecoView
                                android:id="@+id/dynamicArcView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:layout_editor_absoluteX="8dp"
                                tools:layout_editor_absoluteY="8dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_marginTop="10dip"
                        android:background="@color/GrisClaro" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </com.example.raul.oilnote.Utils.CustomScrollView>

</LinearLayout>